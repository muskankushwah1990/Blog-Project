<%- include('../../header.ejs') %>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 left-side " >
      <a href="/admin/dashboard" class="active text-light">Dashboard</a>
      <a href="/admin/blog/display" class="text-light">Blogs</a>
       <a href="/admin/category/display" class="text-light">Categories</a>
      <a href="/admin/contact/display" class="text-light">Contact</a>
    <a href="/admin/about/display" class="text-light">About</a>
      <a href="/logout" class="text-light">Logout</a>
    </div>
    
    <div class="col-md-9">
     
      <!-- Main content here -->
      <div class="dash-right">
        
        <div class="blogButtonAndHeading">
          
          <div>
            
          </div>
          <h1 class="dash-heading">BLOG DISPLAY</h1>

          <div class="blogButton">
            <!-- Button trigger modal -->
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
            >
              Add Blog
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="exampleModal"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                      Add Blog
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form action="/insertBlog" method="post" enctype="multipart/form-data">
                      <div class="mt-3">
                        <label for="">Title</label>
                        <input
                          type="text"
                          name="title"
                          class="form-control"
                        />
                      </div>
                      <div class="mt-3">
                        <label for="">Discription</label>
                        <textarea
                          type="text"
                          name="description"
                          class="form-control"
                        >
                        </textarea>
                      </div>
                      <div class="mt-3">
                        <label for="">Upload Image</label>
                        <input
                          type="file"
                          name="image"
                          class="form-control"
                        />
                      </div>

                      <button type="submit" class="btn btn-primary mt-3">
                        Submit
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        

        <div class="col-md-12 blogTable mb-5 pb-5">
          <div class="table-wrapper"> <!-- Wrapper div for overflow handling -->
            <table class="table table-bordered">
              <thead class="table-primary">
                <tr class="">
                  <th>#ID</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach((item) => { %>
        
                <tr>
                  <td><%= item._id %></td>
                  <td><%= item.title %></td>
                  <td><%= item.description %></td>
                  <td><center><img src="<%= item.image.url %>" width="50px" alt=""></center></td>
                  <td>
                    <a href="/blogView/<%= item._id %>" class="btn btn-info"><i class="fa-regular fa-eye"></i></a>
                    <a href="/editBlog/<%= item._id %>" class="btn btn-success"><i class="fa-regular fa-pen-to-square" ></i></a>
                    <a href="/deleteBlog/<%= item._id %>" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
                  </td>
                </tr>
        
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        
      </div>
      
      </div>
    </div>
  </div>


<%- include('../../footer.ejs') %>
