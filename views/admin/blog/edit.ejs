<%- include('../../header.ejs') %>
   


    <div class="container-fluid">
        <div class="row">
          <div class="col-md-3 left-side " >
            <a href="/admin/dashboard" class="active text-light">Dashboard</a>
            <a href="/admin/blog/display" class="text-light">Blogs</a>
             <a href="/admin/category/display" class="text-light">Categories</a>
            <a href="/admin/contact/display" class="text-light">Contact</a>
          <a href="/admin/about/display" class="text-light">About</a>
            <a href="/logout" class="text-light">Logout</a>
          </div>
          
        
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-3 col-lg-3"></div>
                <div class="col-md-6 ">
                <div>
                    <h1 class="dash-heading">EDIT BLOG </h1>
                    <form action="/updateBlog/<%= edit._id %>" method="post" enctype="multipart/form-data">
                        <div class="mt-3">
                            <label for="">Title</label>
                            <input type="text" name="title" class="form-control" value="<%= edit.title %>" />
                        </div>
                        <div class="mt-3">
                            <label for="">Discription</label>
                            <textarea type="text" name="description" class="form-control"> <%= edit.description %> </textarea>
                        </div>

                        <div class="mt-3">
                            <label for="">Upload Image</label>
                            <input
                              type="file"
                              name="image"
                              class="form-control"
                            
                            />
                            <img src="<%= edit.image.url %>" width="50px" alt="">
                          </div>
                         

                        <button type="submit" class="btn btn-primary mt-3">
                            Update
                        </button>
                       
                    </form>

                    <a href="/admin/blog/display"><button class="btn btn-danger mt-2">Back</button></a>

                </div>

                </div>
                <div class="col-md-2"></div>
                </div>
            </div>
          </div>
        </div>



